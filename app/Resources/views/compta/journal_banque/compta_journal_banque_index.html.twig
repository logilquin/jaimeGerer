{% extends 'compta/compta_layout.html.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<h1>Banque : Journal de banque</h1>
		</div>
	</div>

	<div class="row">
			<div class="col-md-12">
				{% include 'compta/journal_banque/compta_banque_submenu.html.twig' %}
			</div>
	</div>


	<div class="row">
			{{ form_start(form) }}
		<div class="col-md-3">
			{{ form_row(form.comptes) }}
		</div>
		<div class="col-md-3">
			{{ form_row(form.years) }}
		</div>
		{{ form_end(form) }}
	</div>

	<div class="row">
		<div class="col-md-12">
			<p>
				<a class="btn btn-info" id="btn-export">Exporter</a>
			</p>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<table class="table wrapper-ajax" id="table_journal_banque">
			</table>
			<p class="center" id="loader">
				<img src="{{ asset('images/assets/dog_loader.gif') }}" alt="Chargement en cours" /><br />
				<i>Chargement en cours...</i>
			</p>
		</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">

		$(document).ready( function () {

			loadTable();

			$(".compte-select").change(function(){
				$('#table_journal_banque').dataTable().fnDestroy();
				loadTable();
			});

			$(".year-select").change(function(){
				$('#table_journal_banque').dataTable().fnDestroy();
				loadTable();
			});

			function loadTable(){

				$("#loader").removeClass("hidden");
				$(".wrapper-ajax").html("");

				var id = $(".compte-select").val();
				var year = $(".year-select").val();

				$.ajax({
					type: "POST",
					url: Routing.generate('compta_journal_banque_voir', { 'id':  id, 'year' : year} ),
					success: function(data) {

						$("#loader").addClass("hidden");
						$(".wrapper-ajax").html(data);

						$('#table_journal_banque').DataTable({
							"dom": 'T<"clear">lfrtip',
							"oTableTools": {
								"sSwfPath": "/web/lib/datatables/extensions/TableTools/swf/copy_csv_xls_pdf.swf",
							},
							"language" : {
								"url": "//cdn.datatables.net/plug-ins/1.10.7/i18n/French.json"
							},
							"bSort": false,
							"bDestroy": true,
							"columns" : [
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false},
								{"bSortable": false}
							],
							"responsive": true,
							"processing": false,
							"serverSide": false,
						});

						var url = Routing.generate('compta_journal_banque_exporter', { 'id':  id, 'year' : year} );
						$('#btn-export').attr('href', url);
					},
					error: function(jqXHR, textStatus, errorThrown) {
						$("#loader").addClass("hidden");
						console.log(jqXHR.status);
						console.log(textStatus);
						console.log(errorThrown);
					},
				});
			}


		});

	</script>
{% endblock %}
