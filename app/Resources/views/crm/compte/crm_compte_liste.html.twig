{% extends 'crm/crm_layout.html.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<h1>Organisations</h1>	
		</div>
	</div>
	
	<div class="row">
		<div class="col-md-12">
			{% include 'crm/contact/crm_contact_submenu.html.twig' %}
		</div>
	</div>
		
	<div class="row spacer-top">
		<div class="col-md-12">
		    <p>
		    	<a href="{{ path('crm_compte_ajouter') }}" class="btn btn-success">
		    		<span class="glyphicon glyphicon-plus"></span> Ajouter
		    	</a>
		    	<a href="#" class="btn btn-danger">
		    		<span class="glyphicon glyphicon-trash"></span> Supprimer
		    	</a>
		    </p>
	    </div>
    </div>
    
	   <div class="row">
	    	<div class="col-md-12">
			    <table id="table_compte_list" class="table table-bordered table-striped">    
			    	<thead>        
			    		<tr>     
			    			<th>Nom</th>            
			    			<th>Ville, région et pays</th>  
			    			<th>Téléphone</th> 
			    			<th>Actions</th>
			    		</tr>    
			    	</thead>    

			    </table>
			</div>
	</div>

{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript">
		$(document).ready( function () { 
			$('#table_compte_list').DataTable({
				"dom": 'T<"clear">lfrtip',
		        "oTableTools": {
		        	"sSwfPath": "/web/lib/datatables/extensions/TableTools/swf/copy_csv_xls_pdf.swf",
		            "aButtons": [
		                {
		                    "sExtends": "csv",
		                    "sButtonText": "Excel",
		                    "mColumns": [ 0, 1, 2, 3 ],
		                    "sFileName": "comptes.csv"
		                },
		                {
		                    "sExtends": "pdf",
		                    "sButtonText": "PDF",
		                    "mColumns": [ 0, 1, 2, 3 ],
		                    "sFileName": "comptes.pdf",
		                    "sTitle": "Comptes"
		                },
		               
		            ]
		        },
				"language" : {                
					"url": "//cdn.datatables.net/plug-ins/1.10.7/i18n/French.json"            
				},
				"responsive": true,
				"processing": true,
			    "serverSide": true,
			    "ajax":{
	                url :"/web/app_dev.php/crm/compte/liste/ajax", // json datasource
	                type: "post",  // method  , by default get
	            },
	            "columns": [
                   { "data": "nom" },
                   { "data": "region",
					 "mRender":function(data, type, full){
						var s= "";
						if(full.ville != null){
							s+=full.ville+"<br />";
						}
						if(full.region != null){
							s+=full.region+"<br />";
						}
						if(full.pays != null){
							s+=full.pays+"<br />";
						}
						return s;
					 }
				   },
                   //{ "data": "ville" },
                  // { "data": "pays" },
                   { "data": "telephone" },
                ],
				fnDrawCallback: function () {
				  $( 'a', this.fnGetNodes() ).tooltip( {
					"delay": 0,
					"track": true,
					"fade": 250,
					"tooltipClass": 'btn btn-default',
				  } );
				},
                fnInitComplete: function () {
				  $( 'a', this.fnGetNodes() ).tooltip( {
					"delay": 0,
					"track": true,
					"fade": 250,
					"tooltipClass": 'btn btn-default',
				  } );
				},
                "columnDefs": [
                               {
                                   // The `data` parameter refers to the data for the cell (defined by the
                                   // `data` option, which defaults to the column being worked with, in
                                   // this case `data: 0`.
                                   "render": function ( data, type, row ) {
                                       return '<a href="voir/'+row['id']+'">'+data+'</a>';
                                   },
                                   "targets": 0
                               },
                               {
                                   // The `data` parameter refers to the data for the cell (defined by the
                                   // `data` option, which defaults to the column being worked with, in
                                   // this case `data: 0`.
                                   "render": function ( data, type, row ) {
                                       return "<a href=\"voir/"+row['id']+"\" class=\"btn btn-xs btn-info\" ​data-toggle=\"tooltip-btn-xs\" title=\"Voir\"><span class=\"glyphicon glyphicon-eye-open\"></span></a>" +" "+
                                    	"<a href=\"editer/"+row['id']+"\" class=\"btn btn-xs btn-warning\" ​data-toggle=\"tooltip-btn-xs\" title=\"Editer\"><span class=\"glyphicon glyphicon-pencil\"></span></a>" +" "+
                                    	"<a href=\"supprimer/"+row['id']+"\" class=\"btn btn-xs btn-danger\" ​data-toggle=\"tooltip-btn-xs\" title=\"Supprimer\"><span class=\"glyphicon glyphicon-trash\"></span></a>";
                                   },
                                   "targets": 3
                               },
                               { "visible": false,  "targets": [ 'id' ] }
                           ]
			});

		});
	</script>
{% endblock %}
